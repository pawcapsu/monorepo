{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "paths": {
      // Applications
      "@pawcapsu/*": [
        "apps/pawcapsu-api/src/*"
      ],
      "@notifier/*": [
        "apps/notifier/src/*"
      ],

      // Libraries
      "@app/shared": [
        "libs/shared/src"
      ],
      "@app/shared/*": [
        "libs/shared/src/*"
      ],
      "@app/services": [
        "libs/services/src"
      ],
      "@app/services/*": [
        "libs/services/src/*"
      ],
      "@app/bootstrap": [
        "libs/bootstrap/src"
      ],
      "@app/bootstrap/*": [
        "libs/bootstrap/src/*"
      ]
    }
  }
}